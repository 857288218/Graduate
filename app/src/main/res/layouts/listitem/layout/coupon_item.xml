<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:padding="@dimen/space_10px"
        android:layout_margin="@dimen/space_20px"
        android:background="@drawable/coupon_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="@dimen/space_20px"
                android:layout_marginLeft="@dimen/space_20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/coupon_name"
                    android:gravity="center"
                    android:textSize="@dimen/space_35px"
                    android:textColor="@color/black"
                    android:text="鲜果超市红包"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginLeft="@dimen/space_20px"
                android:layout_marginTop="@dimen/space_10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/space_40px"
                    android:layout_alignBaseline="@+id/coupon_money"
                    android:includeFontPadding="false"
                    android:id="@+id/￥"
                    android:text="￥"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toRightOf="@+id/￥"
                    android:includeFontPadding="false"
                    android:layout_centerVertical="true"
                    android:id="@+id/coupon_money"
                    android:textSize="@dimen/space_60px"
                    android:textColor="@color/colorRed"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:includeFontPadding="false"
                    android:layout_alignBaseline="@+id/coupon_money"
                    android:layout_toRightOf="@+id/coupon_money"
                    android:id="@+id/min_use"
                    android:layout_marginLeft="@dimen/space_40px"
                    android:textSize="@dimen/space_30px"
                    android:text="满25元可用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/use"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/space_25px"
                    android:paddingTop="@dimen/space_10px"
                    android:paddingBottom="@dimen/space_10px"
                    android:paddingLeft="@dimen/space_40px"
                    android:paddingRight="@dimen/space_40px"
                    android:background="@drawable/red_ban_yuan"
                    android:textColor="@color/white"
                    android:text="使用"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_marginTop="@dimen/space_10px"
                android:layerType="software"
                android:layout_marginRight="@dimen/space_25px"
                android:layout_marginLeft="@dimen/space_20px"
                android:background="@drawable/dash_line"
                android:layout_width="match_parent"
                android:layout_height="4px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginBottom="@dimen/space_10px"
                android:layout_marginTop="@dimen/space_10px"
                android:layout_marginRight="@dimen/space_25px"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/space_20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/space_40px"
                    android:text="有效期至："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/coupon_date"
                    android:text="2018年12月31日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>