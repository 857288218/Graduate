<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/one_fragment_content_item_bg"
    android:layout_height="wrap_content">

    <com.example.rjq.myapplication.view.RoundAngleImageView
        app:roundHeight="@dimen/dimen_2dp"
        app:roundWidth="@dimen/dimen_2dp"
        android:layout_marginLeft="@dimen/space_20px"
        android:layout_marginTop="@dimen/space_30px"
        android:id="@+id/one_content_item_iv"
        android:scaleType="centerCrop"
        android:src="@mipmap/b1"
        android:layout_width="@dimen/space_130px"
        android:layout_height="@dimen/space_130px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/one_content_item_content"
        android:layout_toRightOf="@+id/one_content_item_iv"
        android:layout_marginRight="@dimen/space_20px"
        android:layout_marginTop="@dimen/space_40px"
        android:layout_marginLeft="@dimen/space_20px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:id="@+id/one_fragment_content_item_name"
                android:textSize="@dimen/space_30px"
                android:textColor="@color/black"
                android:text="@string/one_fragment_content_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/space_15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/one_fragment_star"
                android:numStars="5"
                style="@style/one_fragment_rating_style"
                android:rating="4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/one_fragment_score"
                android:textColor="@color/bottom_tab_text_normal_color"
                android:layout_marginLeft="@dimen/space_10px"
                android:textSize="@dimen/one_fragment_score_num"
                android:text="4.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/space_20px"
                android:textSize="@dimen/one_fragment_score_num"
                android:text="@string/one_fragment_order_num"
                android:id="@+id/one_fragment_order_num"
                android:textColor="@color/bottom_tab_text_normal_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="@dimen/space_15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/one_fragment_num_style"
                android:id="@+id/one_fragment_deliver"
                android:text="￥20起送"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_centerInParent="true"
                android:id="@+id/divider_money"
                android:layout_toRightOf="@+id/one_fragment_deliver"
                android:layout_marginRight="@dimen/space_10px"
                android:layout_marginLeft="@dimen/space_10px"
                android:background="@color/grey_divider"
                android:layout_width="1dp"
                android:layout_height="@dimen/space_25px"/>

            <TextView
                style="@style/one_fragment_num_style"
                android:layout_toRightOf="@+id/divider_money"
                android:id="@+id/one_fragment_extra"
                android:text="配送费￥4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/one_fragment_address"
                android:layout_toLeftOf="@+id/divider_location"
                android:text="公寓一楼"
                android:textColor="@color/one_fragment_location"
                android:textSize="@dimen/one_fragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_centerInParent="true"
                android:id="@+id/divider_location"
                android:layout_toLeftOf="@+id/one_fragment_deliver_time"
                android:layout_marginRight="@dimen/space_10px"
                android:layout_marginLeft="@dimen/space_10px"
                android:background="@color/grey_divider"
                android:layout_width="1dp"
                android:layout_height="@dimen/space_25px"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/one_fragment_deliver_time"
                android:text="27分钟"
                android:textColor="@color/one_fragment_location"
                android:textSize="@dimen/one_fragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_marginTop="@dimen/space_20px"
            android:background="@color/grey_divider"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/one_fragment_item_favour"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/one_fragment_item_reduce_container"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_15px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/one_fragment_item_reduce"
                    android:textSize="@dimen/one_fragment_item_reduce"
                    android:textColor="@color/white"
                    android:text="@string/reduce"
                    android:layout_width="@dimen/space_30px"
                    android:layout_height="@dimen/space_30px" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/one_fragment_item_reduce"
                    android:layout_marginLeft="@dimen/space_8px"
                    style="@style/one_fragment_num_style"
                    android:text="满22减17，满35减23，满55减31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/one_fragment_item_special_container"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_15px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/one_fragment_item_special"
                    android:textSize="@dimen/one_fragment_item_reduce"
                    android:textColor="@color/white"
                    android:text="@string/special"
                    android:layout_width="@dimen/space_30px"
                    android:layout_height="@dimen/space_30px" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/one_fragment_item_special"
                    android:layout_marginLeft="@dimen/space_8px"
                    style="@style/one_fragment_num_style"
                    android:text="暖心三人餐A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/one_fragment_item_new_container"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_15px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/one_fragment_item_new"
                    android:textSize="@dimen/one_fragment_item_reduce"
                    android:textColor="@color/white"
                    android:text="@string/first"
                    android:layout_width="@dimen/space_30px"
                    android:layout_height="@dimen/space_30px" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/one_fragment_item_new"
                    android:layout_marginLeft="@dimen/space_8px"
                    style="@style/one_fragment_num_style"
                    android:text="新用户下单立减19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/one_fragment_item_give_container"
                android:visibility="gone"
                android:layout_marginTop="@dimen/space_15px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:background="@drawable/one_fragment_item_give"
                    android:textSize="@dimen/one_fragment_item_reduce"
                    android:textColor="@color/white"
                    android:text="@string/give"
                    android:layout_width="@dimen/space_30px"
                    android:layout_height="@dimen/space_30px" />

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/one_fragment_item_give"
                    android:layout_marginLeft="@dimen/space_8px"
                    style="@style/one_fragment_num_style"
                    android:text="满23赠送鸡蛋汤一份"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_below="@+id/one_content_item_content"
        android:layout_marginTop="@dimen/space_40px"
        android:background="@color/grey_divider"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

</com.zhy.autolayout.AutoRelativeLayout>