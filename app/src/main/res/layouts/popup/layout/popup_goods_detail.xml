<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/item_ll"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:background="@color/grey_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10dp"/>

                <RelativeLayout
                    android:id="@+id/package_money_rl"
                    android:paddingLeft="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_20dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <TextView
                        android:textSize="14.5sp"
                        android:layout_centerVertical="true"
                        android:text="餐盒"
                        android:id="@+id/good_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignBaseline="@+id/good_package_money"
                        android:layout_toLeftOf="@+id/good_package_money"
                        android:textSize="12sp"
                        android:textColor="@color/colorRed"
                        android:text="￥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorRed"
                        android:layout_alignParentRight="true"
                        android:text="12"
                        android:id="@+id/good_package_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

        </ScrollView>

        <!--<View-->
            <!--android:background="@color/transparent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dimen_54dp"/>-->

</com.zhy.autolayout.AutoLinearLayout>