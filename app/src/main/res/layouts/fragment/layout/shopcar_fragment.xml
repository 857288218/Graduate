<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:orientation="vertical"
        android:background="@color/color_f9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/space_25px"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:text="@string/cart"
            android:textColor="@color/color_56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            style="@style/grey_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/cart_fragment_recycler"
        android:background="@color/grey_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/cart_empty"
        android:visibility="gone"
        android:layout_marginTop="@dimen/space_300px"
        android:layout_gravity="center"
        android:src="@mipmap/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</com.zhy.autolayout.AutoLinearLayout>