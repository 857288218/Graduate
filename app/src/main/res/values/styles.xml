<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_status_bar_color</item>
        <item name="colorPrimaryDark">@color/common_status_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <!--欢迎页面主题-->
    <style name="ThemeWelcome" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/start_img</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SearchTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#c1c1c1</item>
    </style>

    <style name="toolbar_textAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">32px</item>
    </style>

    <style name="RadioGroupButtonStyle" >
        <!-- 这个属性是去掉button 默认样式-->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/selector_bottom_tab_text</item>
        <item name="android:paddingTop">@dimen/dimen_7dp</item>

    </style>

    <style name="my_popup_item">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="one_fragment_num_style">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/bottom_tab_text_normal_color</item>
        <item name="android:textSize">@dimen/one_fragment_score_num</item>
    </style>

    <!--下划线设置-->
    <style name="LineOneTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorLineGray</item>
    </style>

    <!--dialog属性自定义-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域阴影效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/dialogAnim</item>
    </style>

    <!--Dialog从底部弹出消失动画-->
    <style name="dialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--popupWindow从底部弹出消失动画-->
    <style name="popAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--  switch 控件标准样式  -->
    <style name="mx_switch_custom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:switchMinWidth">36dip</item>
        <!--<item name="android:track">@drawable/mx_switch_track</item>-->
        <!--<item name="android:thumb">@drawable/mx_switch_thumb_normal</item>-->
    </style>

    <style name="switchTheme">
        <item name="colorAccent">@color/text_select_color</item>
    </style>

    <style name="head_icon_text_style">
        <item name="android:textColor">@color/bottom_tab_text_normal_color</item>
        <item name="android:layout_marginTop">@dimen/space_15px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/space_25px</item>
    </style>

    <style name="one_fragment_rating_style" parent="@android:style/Widget.RatingBar">
        <!-- 定义星星图片 -->
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/one_fragment_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/one_fragment_ratingbar</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <!-- 改变原生ratingbar的颜色 -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_56</item>
        <item name="colorControlActivated">@color/start_golden</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="grey_divider">
        <item name="android:background">@color/grey_divider</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="bold_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="red_radius_num_text" parent="bold_text_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/shop_cart_num_bg</item>
    </style>

    <style name="w_h_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="w_h_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bg_white" parent="w_h_match_wrap">
        <item name="android:background">@color/white</item>
    </style>



    <style name="black666_text" parent="w_h_wrap_content">
        <item name="android:textColor">@color/color_666</item>
    </style>

    <style name="black666_text_35px" parent="black666_text">
        <item name="android:textSize">35px</item>
    </style>

    <style name="login_et_style" parent="w_h_match_wrap">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/text_color_grey</item>
        <item name="android:textSize">@dimen/space_30px</item>
        <item name="android:paddingTop">@dimen/space_30px</item>
        <item name="android:paddingBottom">@dimen/space_30px</item>
    </style>

    <style name="green_text" parent="w_h_wrap_content">
        <item name="android:textColor">@color/bottom_tab_text_selected_color</item>
    </style>
</resources>
